{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identityCluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      },
      "ration": {
        "ClusterId": "rationCluster",
        "Match": {
          "Path": "/ration/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/ration" }
        ]
      },
      "inventory": {
        "ClusterId": "inventoryCluster",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/inventory" }
        ]
      }
    },
    "Clusters": {
      "identityCluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:5001/"
          }
        }
      },
      "rationCluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:5002/"
          }
        }
      },
      "inventoryCluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:5003/"
          }
        }
      }
    }
  }
}
